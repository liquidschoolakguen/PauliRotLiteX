<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_2"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
 >

    <RadioGroup
        android:checkedButton="@+id/b_m_1"
        android:id="@+id/toggle1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_out_line"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:layout_marginTop="9dp">

        <RadioButton
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/b_m_1"
            android:background="@drawable/toggle_widget_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="M"
            android:textColor="@color/colorPrimaryWhite" />

        <RadioButton
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/b_w_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background"
            android:button="@null"
            android:gravity="center"
            android:text="W"
            android:textColor="@color/colorPrimaryWhite" />
    </RadioGroup>


    <EditText
        android:id="@+id/editText_lg_updaten_1"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_schueler_3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="11"
        android:textSize="14sp"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_strafpunkt_minus_1"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/roundedbutton2"
        android:gravity="center"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginTop="3dp"

        />
    <TextView
        android:id="@+id/tv_strafpunkt_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        />
    <Button
        android:id="@+id/btn_strafpunkt_plus_1"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/roundedbutton2"
        android:gravity="center"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        />

</LinearLayout>