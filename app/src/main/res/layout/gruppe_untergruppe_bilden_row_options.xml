<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_sep">



    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">



        <RelativeLayout
            android:id="@+id/xxxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/tv_item_separator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="separator_name"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/multi_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/multi_haekchen"
                    android:tint="@color/colorPrimaryPlus"
                    />


                <ImageView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/haekchen"
                    android:tint="@color/colorPrimaryPlus"
                    android:layout_toRightOf="@+id/multi_save"/>


                <ImageView
                    android:id="@+id/up1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/save"
                    android:src="@drawable/up" />

            </RelativeLayout>


        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/xxxx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xxxx">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">






            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">




            </RelativeLayout>


        </RelativeLayout>












    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/radio_mini"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xxxx2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />
</LinearLayout>