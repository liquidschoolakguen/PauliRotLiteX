<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tabs.WaehleSchuelerDynamicTabsActivity">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >




    <ListView
        android:id="@+id/dynamic_list_schueler_update"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:descendantFocusability="afterDescendants"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">
            <Button
                android:id="@+id/bnt_add_schueler"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="+SchülerIn"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/bnt_lg_update"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Update"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/bnt_lg_loeschen"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="löschen"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        </LinearLayout>



    </FrameLayout>
</RelativeLayout>